@model IEnumerable<MovieShopTrio.Database.Movie>

@{
    ViewData["Title"] = "GetAllMovies";
}

<h1 class="text-center"><em><strong>Movies</strong></em></h1>
<hr />
<div class="d-grid gap-2 col-md-4 mx-auto">
    <a asp-action="CreateMovie" class="m-2 btn btn-outline-success">Create New</a>
</div>
<table class="mt-3 table table-dark table-striped table-bordered">
    <thead>
        <tr>
            <th>Image</th>

            <th class="col-md-3">@Html.DisplayNameFor(model => model.Title)</th>

            <th class="col-md-2">@Html.DisplayNameFor(model => model.Director)</th>

            <th class="col-md-4">@Html.DisplayNameFor(model => model.Description)</th>

            <th class="col-md-1">@Html.DisplayNameFor(model => model.ReleaseYear)</th>

            <th class ="col-md-1">@Html.DisplayNameFor(model => model.Price)</th>

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.URLImage))
                    {
                        <img src="@item.URLImage" alt="@item.Title" style="width: 100px; height: auto;" />
                    }
                    else
                    {
                        <span>No Image Available</span>
                    }
                </td>

                <td><strong>@Html.DisplayFor(modelItem => item.Title)</strong></td>

                <td>@Html.DisplayFor(modelItem => item.Director)</td>

                <td><em>@Html.DisplayFor(modelItem => item.Description)</em></td>

                <td>@Html.DisplayFor(modelItem => item.ReleaseYear)</td>

                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                
                <td>                    
                    <a asp-action="EditMovie" asp-route-id="@item.Id" class="m-3 btn btn-outline-warning">Edit</a>                    

                    <form asp-action="DeleteMovie" asp-route-id="@item.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this movie?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

