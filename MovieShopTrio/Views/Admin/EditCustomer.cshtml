@model MovieShopTrio.Database.Customer

@{
    ViewData["Title"] = "EditCustomer";
}

<style>
    .custom-dark-shadow {
        box-shadow: 0 8px 16px 4px rgba(0, 0, 0, 0.75) !important; /* Bigger and darker shadow */
        background-color: #2c3034; /* Dark background */
        color: #ffffff; /* White text for readability */
    }
        .custom-dark-shadow input::placeholder,
        .custom-dark-shadow textarea::placeholder {
            color: #aaaaaa; /* Light gray for placeholders */
        }
</style>

<div class="container mt-4">
    <h1 class="text-center"><em><strong>Edit Customer</strong></em></h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <form asp-action="EditCustomer" method="post" class="custom-dark-shadow p-4 rounded">            
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter a name"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="BillingAddress" class="control-label"></label>
                    <input asp-for="BillingAddress" class="form-control" placeholder="Enter a Billingaddress"/>
                    <span asp-validation-for="BillingAddress" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="BillingCity" class="control-label"></label>
                    <input asp-for="BillingCity" class="form-control" placeholder="Enter a Billingcity"/>
                    <span asp-validation-for="BillingCity" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="BillingZip" class="control-label"></label>
                    <input asp-for="BillingZip" class="form-control" placeholder="Enter a Billingzip"/>
                    <span asp-validation-for="BillingZip" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DeliveryAddress" class="control-label"></label>
                    <input asp-for="DeliveryAddress" class="form-control" placeholder="Enter a Deliveryaddress"/>
                    <span asp-validation-for="DeliveryAddress" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DeliveryCity" class="control-label"></label>
                    <input asp-for="DeliveryCity" class="form-control" placeholder="Enter a Deliverycity"/>
                    <span asp-validation-for="DeliveryCity" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DeliveryZip" class="control-label"></label>
                    <input asp-for="DeliveryZip" class="form-control" placeholder="Enter a Deliveryzip"/>
                    <span asp-validation-for="DeliveryZip" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="EmailAddress" class="control-label"></label>
                    <input asp-for="EmailAddress" class="form-control" placeholder="Enter an Emailaddress"/>
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Enter a Phonenumber"/>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-outline-success">Save</button>
                    <a asp-action="GetAllCustomers" class="btn btn-outline-light">Back to Customer List</a>
                </div>
            </form>
        </div>
    </div>
</div>