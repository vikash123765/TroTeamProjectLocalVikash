@model CustomerOrdersViewModel

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="d-flex align-content-center">
            <h2 class="me-4"><em><strong>Orders for:</strong></em></h2>
            <h5 class="pt-2">@Model.CustomerEmail</h5>
        </div>

        <hr />

        <h4 class="mb-4"><strong>Total Orders: @Model.OrderCount</strong></h4>
    </div>

    <div class="d-flex flex-column align-items-center">
        @foreach (var order in Model.Orders)
        {
            <partial name="_OrderPartial" model="order" />

        }
    </div>

    <div class="col-md-6 mt-4">
        <hr />

        <div class="d-flex justify-content-between">
            <h4><strong>Total Cost: @Model.Orders.Sum(order => Model.GetTotalCost(order)).ToString("C")</strong></h4>
            <a asp-controller="Admin" asp-action="GetAllCustomers" class="btn btn-outline-dark">Back to Customer List</a>
        </div>
    </div>
</div>