@model MovieShopTrio.Database.Customer

<style>
    .custom-dark-shadow {
        box-shadow: 0 8px 16px 4px rgba(0, 0, 0, 0.75) !important; /* Bigger and darker shadow */        
    }
    .custom-bg-header-footer {
        background-color: #212529; /* Dark background */
        color: #ffffff; /* White text for readability */
    }
    .custom-bg-body {
        background-color: #2c3034; /* Dark background */
        color: #ffffff; /* White text for readability */
    }
</style>

<div class="p-2 col-md-4">
    <div class="card custom-dark-shadow border-dark rounded">
        <div class="card-header p-0 hstack gap-2 custom-bg-header-footer">
            <div class="p-3"><strong>@Model.Name</strong></div>
            <div class="p-2 ms-auto"><a asp-action="EditCustomer" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-warning">Edit</a></div>
            <div class="vr"></div>
            <div class="p-2">
                <form asp-action="DeleteCustomer" asp-route-id="@Model.Id" method="post" style="display:inline;">
                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this customer?')">Delete</button>
                </form>
            </div>                      
        </div>
        <div class="card-body custom-bg-body">
            Billing Address: <em>@Model.BillingAddress</em> <br />
            Billing Zip:     <em>@Model.BillingZip</em> <br />
            Billing City:    <em>@Model.BillingCity</em> <br />
            <br />
            Delivery Address: <em>@Model.DeliveryAddress</em> <br />
            Delivery Zip:     <em>@Model.DeliveryZip</em> <br />
            Delivery City:    <em>@Model.DeliveryCity</em> <br />
        </div>
        <div class="card-footer custom-bg-header-footer">
            <div>&#128383; @Model.PhoneNumber</div>
            <div class="d-flex justify-content-between">
                &#128231; @Model.EmailAddress
                <a asp-controller="Admin" asp-action="OrdersByEmail" asp-route-email="@Model.EmailAddress" class="btn btn-sm btn-outline-info">View Orders</a>
            </div>

            
        </div>
    </div>
</div>
