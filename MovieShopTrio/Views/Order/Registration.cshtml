@model MovieShopTrio.Database.Customer

@{
    ViewData["Title"] = "Customer Registration";
}

<h2>Complete Your Registration</h2>

<form asp-action="RegisterCustomerAndPlaceOrder" method="post">
    <input type="hidden" asp-for="EmailAddress" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BillingAddress"></label>
        <input asp-for="BillingAddress" class="form-control" />
        <span asp-validation-for="BillingAddress" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BillingCity"></label>
        <input asp-for="BillingCity" class="form-control" />
        <span asp-validation-for="BillingCity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BillingZip"></label>
        <input asp-for="BillingZip" class="form-control" />
        <span asp-validation-for="BillingZip" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DeliveryAddress"></label>
        <input asp-for="DeliveryAddress" class="form-control" />
        <span asp-validation-for="DeliveryAddress" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DeliveryCity"></label>
        <input asp-for="DeliveryCity" class="form-control" />
        <span asp-validation-for="DeliveryCity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DeliveryZip"></label>
        <input asp-for="DeliveryZip" class="form-control" />
        <span asp-validation-for="DeliveryZip" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Place Order</button>
</form>
