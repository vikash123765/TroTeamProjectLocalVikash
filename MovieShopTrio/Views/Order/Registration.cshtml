@model MovieShopTrio.Database.Customer

@{
    ViewData["Title"] = "Customer Registration";
}

<div class="container mt-5">
    <h2 class="text-center text-primary">Complete Your Registration</h2>
    <hr />

    <form asp-action="RegisterCustomerAndPlaceOrder" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="EmailAddress" />

        <div class="form-group">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BillingAddress" class="form-label"></label>
            <input asp-for="BillingAddress" class="form-control" />
            <span asp-validation-for="BillingAddress" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BillingCity" class="form-label"></label>
            <input asp-for="BillingCity" class="form-control" />
            <span asp-validation-for="BillingCity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BillingZip" class="form-label"></label>
            <input asp-for="BillingZip" class="form-control" />
            <span asp-validation-for="BillingZip" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DeliveryAddress" class="form-label"></label>
            <input asp-for="DeliveryAddress" class="form-control" />
            <span asp-validation-for="DeliveryAddress" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DeliveryCity" class="form-label"></label>
            <input asp-for="DeliveryCity" class="form-control" />
            <span asp-validation-for="DeliveryCity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DeliveryZip" class="form-label"></label>
            <input asp-for="DeliveryZip" class="form-control" />
            <span asp-validation-for="DeliveryZip" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber" class="form-label"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary btn-lg">Place Order</button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
